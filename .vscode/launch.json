    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rzdb'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=rzdb"
                ],
                "filter": {
                    "name": "rzdb",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run example load_save",
            "args": [],
            "program": "${workspaceFolder}/target/debug/examples/load_save",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
    ]
}